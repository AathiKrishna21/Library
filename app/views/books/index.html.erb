<h1>Book</h1>
<% @books.each do |book| %>
	
	<div class="card" style="width: 18rem;">

	  <%= image_tag(url_for(book.thumbnail), {:class => 'card-img-top'}) %>  
	  <div class="card-body">
	    <h5 class="card-title">
	    	<%= book.title %>
		</h5>
	    <p class="card-text">
	    	<%= book.author %>
	    </p>
	    <div class="btn btn-primary">
	    	<%= link_to 'Read', read_catagory_book_path(@catagory.id,book.id), :class => "btn" %>
	    </div>
	    <!--<a href="#" class="btn btn-primary">Read...</a>-->
	  </div>
	</div>
	
<% end %>